<!DOCTYPE html>
<html>
  <%include ../partials/head.ejs%>
  <body>
    <%include ../partials/menu.ejs%>
    <!--Page Contents-->
    <div class="pusher">
      <div class="ui vertical stripe segment" style="margin-top:40px;">
        <div class="ui middle aligned stackable grid container">
          <div class="ui text container">
            <div class="ui grid centered aligned" style="margin-top:60px;margin-bottom:60px">
              <div class="twelve wide column">
                <form class="ui form segment" action="/movies/edit/<%= movie.id %>" method="post" >
                  <div class="field">
                    <label>Judul Film</label>
                    <input type="text" name="title" value="<%= movie.title %>">
                  </div>
                  <div class="two fields">
                    <div class="field">
                      <label>Genre</label>
                      <input type="text" name="genre" value="<%= movie.genre %>">
                    </div>
                    <div class="field">
                      <label>Durasi</label>
                      <input type="text" name="duration" value="<%= movie.duration %>">
                    </div>
                  </div>
                  <div class="field">
                    <label>Deskripsi</label>
                    <input type="text" name="description" value="<%= movie.description %>">
                  </div>
                  <div class="two fields">
                    <div class="field">
                      <label>Jam Tayang</label>
                      <select class="ui dropdown" name="ScheduleId">
                        <option value="">-pilih jam-</option>
                        <%schedules.forEach(schedule => {
                          if(movie.ScheduleId == schedule.id){%>
                          <option value="<%=schedule.id%>" selected><%=schedule.time%></option>
                        <%}
                      })%>
                      </select>
                    </div>
                    <div class="field">
                      <label>Harga Tiket</label>
                      <input type="text" name="ticket_price" value="<%= movie.ticket_price %>">
                    </div>
                  </div>
                  <div class="field">
                    <label>Poster (Baru)</label>
                    <input type="file" name="pic" value="<%= movie.picture_name %>">
                  </div>
                  <input class="ui primary button" type="submit" value="Submit">
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%include ../partials/footer.ejs%>
    </div>
  </body>
</html>
