<!DOCTYPE html>
<html>
  <%include ../partials/head.ejs%>
  <body>
    <%include ../partials/menu.ejs%>
    <!--Page Contents-->
    <div class="pusher">
      <div class="ui vertical stripe segment" style="margin-top:40px;">
        <div class="ui middle aligned stackable grid container">
          <div class="row">
            <div class="center aligned column">
              <h3><%=movie.title%></h3>
            </div>
          </div>
          <div class="row center aligned">
              <div class="wide column">
                <div class="ui text container">
                  <iframe width="560" height="315" src="<%=movie.trailer_link%>" frameborder="0" allowfullscreen></iframe>
                  <div class="description" style="margin-top: 20px">
                    <%=movie.description%>
                  </div>
                  <div class="row" style="margin-top: 20px">
                    <table class="ui celled table">
                      <tbody>
                        <tr>
                          <th class="right aligned">Genre</th>
                          <td class="center aligned"> : </td>
                          <td class="left aligned"><%=movie.genre%></td>
                        </tr>
                        <tr>
                          <th class="right aligned">Durasi</th>
                          <td class="center aligned"> : </td>
                          <td class="left aligned"><%=movie.duration%> menit</td>
                        </tr>
                        <tr>
                          <th class="right aligned">Harga Tiket</th>
                          <td class="center aligned"> : </td>
                          <td class="left aligned">Rp. <%=movie.ticket_price%></td>
                        </tr>
                        <tr>
                          <th class="right aligned">Jam Tayang</th>
                          <td class="center aligned"> : </td>
                          <td class="left aligned"><%=movie.Schedule.time%> WIB</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <a style="margin-top: 20px" class="ui large primary button" href="/movies/<%=movie.id%>/book">Pesan Sekarang <i class="right arrow icon"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%include ../partials/footer.ejs%>
    </div>
  </body>
</html>
