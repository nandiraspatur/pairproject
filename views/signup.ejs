<!DOCTYPE html>
<html>
  <%include ./partials/head.ejs%>
  <body>
    <%include ./partials/menu.ejs%>
    <!--Page Contents-->
    <div class="pusher">
      <div class="ui vertical stripe segment" style="margin-top:40px;">
        <div class="ui middle aligned stackable grid container">
          <div class="ui text container">
            <div class="ui grid center aligned" style="margin-top:60px;margin-bottom:60px">
              <div class="ten wide column login-area">
                <!-- form -->
                <form class="ui form" action="/signup" method="post">
                  <h2 style="color:#fff">Registrasi Member</h2>
                  <div class="ui left icon input field" style="margin-top:15px">
                    <input type="text" name="username" placeholder="Pilih Username Anda" type="text">
                    <i class="user icon"></i>
                  </div>
                  <div class="ui left icon input field" style="margin-top:10px;">
                    <input type="password" name="password" placeholder="Buat Password Baru" type="text">
                    <i class="configure icon"></i>
                  </div>
                  <input type="text" name="role" value="customer" hidden>
                  <div class="ui">
                    <input type="submit" value="Sign Up" class="ui primary button" style="margin-top:10px;margin-bottom:40px">
                  </div>
                  <span>Sudah punya akun? <a href="/signin" style="color:#fff">Sign In</a></span>
                  <div class="ui error message"></div>
                  <% if(error) { %>
                    <div class="ui red message"><%= error %></div>
                  <% } %>
                  </div>
                </form>
                <!-- End form -->
              </div>
            </div>
          </div>
        </div>
      </div>
      <%include ./partials/footer.ejs%>
    </div>
  </body>
  <script type="text/javascript">
  $('.ui.form')
    .form({
      fields: {
        username: {
          identifier: 'username',
          rules: [
            {
              type   : 'empty',
              prompt : 'Username tidak boleh kosong'
            }
          ]
        },
        password: {
          identifier: 'password',
          rules: [
            {
              type   : 'empty',
              prompt : 'Password tidak boleh kosong'
            },
            {
              type   : 'minLength[6]',
              prompt : 'Panjang password minimal {ruleValue} karakter'
            }
          ]
        }
      }
    })
  ;
  </script>
</html>
